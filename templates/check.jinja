    // Function to calculate modular exponentiation (a^b mod m)
    function modPow(a, b, m) {
        let result = 1;
        a %= m;
        while (b > 0) {
            if (b & 1) {
                result = (result * a) % m;
            }
            b >>= 1;
            a = (a * a) % m;
